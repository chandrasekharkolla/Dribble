<%= image_tag @post.image.url(:medium) %>
<h1><%= @post.title %></h1>
<p><a href="<%= @post.link %>" target="_blank"><%= @post.link %></a></p>
<p><%= @post.user.first_name %></p>
<p><%= @post.description %></p>

<h2 class="comment_count"><%= pluralize(@post.comments.count, "Comment") %></h2>
  <% @comments.each do |comment| %>
    <h3><%= comment.user.first_name %></h3>
    <p><%= comment.content %></p>
  <% end %>
  <%= render 'comments/form' %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path, method: :delete, data: { confirm: 'Are you sure want to delete?' } %>
<%= link_to "Home", root_path %>
